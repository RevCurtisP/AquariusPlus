100 REM Test TILEMAP statements
110 SET FNKEY 3 TO \"run tilemap.bas\r"

200 REM Set Palette and Tile Data
210 DEF RGBLIST R$=12,12,12;15,15,15;5,5,5;15,0,0;0,0,0
212 SET PALETTE 2 TO R$
220 SET TILE 128 TO $"................................................................":REM Empty
222 SET TILE 129 TO $"1111111111111111111111111111111111144111114444111414414144444444":REM Club Top
224 T$="4444444414144141111441111144441111111111111111111111111111111111":REM Club Bottom
225 SET TILE 130 TO ASC$(T$)
230 G$=GETTILE$(130)
232 IF HEX$(G$)<>T$ THEN PRINT "GETTILE() error"

300 REM Populate Tile Data
310 FILL TILEMAP TILE 128 PALETTE 2
320 SET TILEMAP (1,1) TO TILE 129 PALETTE 2
322 SET TILEMAP (1,2) TO TILE 130 PALETTE 2
324 IF TILEMAP(1,2)<>130+2*256*16 THEN PRINT "TILEMAP() error"
330 SET TILEMAP OFFSET 8,8
332 IF TILEMAPX<>8 THEN PRINT "TILEMAPX error"
334 IF TILEMAPY<>8 THEN PRINT "TILEMAPY error"

800 REM Activate TileMap mode
810 SCREEN 0,1
820 PAUSE
