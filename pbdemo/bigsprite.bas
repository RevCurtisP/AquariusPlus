100 REM One Big Sprite
105 SET SPRITE * CLEAR:SCREEN ,,,1:CLS 6,0
110 T1$="11111111":T2$="10000001"
115 T$=ASC$(T1$+T2$+T2$+T2$+T2$+T2$+T2$+T1$)
120 FOR T=0 TO 63:SET TILE T TO T$:NEXT
130 A$=STRING$(64,0):S$=$"408080":T$=""
140 FOR I=0 TO 7:FOR J=0 TO 7:T=I*8+J
150 S$=S$+CHR$(T)+CHR$(J*8)+CHR$(I*8):T$=T$+CHR$(T)+CHR$(0)
160 NEXT:NEXT
170 SET SPRITE S$ ATTR A$ TILE T$ POS 0,0 ON
200 FOR X=0 TO 320-64:SET SPRITE S$ POS X,0:NEXT
