100 REM One Big Sprite
110 T$=$"1111111110000001100000011000000110000001100000011000000111111111"
120 FOR T=0 TO 63:SET TILE T TO T$:NEXT
130 A$=STRING$(64,0):S$=$"408080":T$=""
140 FOR I=0 TO 7:FOR J=0 TO 7:T=I*8+J
150 S$=S$+CHR$(T)+CHR$(J*8)+CHR$(I*8):T$=T$+CHR$(T)+CHR$(0)
