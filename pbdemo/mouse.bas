100 REM Mouse Test
110 SET SPRITE * CLEAR:SCREEN 1,,,1:CLS
115 PRINT "X =":PRINT "Y =":PRINT "B =":PRINT "W ="
120 SET TILE 511 TO $"FFF00000F77F0000F777F0000F777F0000F777F0000F777F0000F7F000000F00"
130 DEF SPRITE M$ = 0,0,0
140 DEF TILELIST T$=511
150 SET SPRITE M$ TILE T$ POS 156,96 ON
160 LX=256:LY=256:LB=256:LD=256:REM Force display

200 REM Main Loop
210 X=MOUSEX:Y=MOUSEY:B=MOUSEB:W=MOUSEW
220 IF X<>LX THEN LOCATE 5,0:PRINT X;"  ";:LX=X
230 IF Y<>LY THEN LOCATE 5,1:PRINT Y;"  ";:LY=Y
240 IF B<>LB THEN LOCATE 5,2:PRINT B;"  ";:LB=B
